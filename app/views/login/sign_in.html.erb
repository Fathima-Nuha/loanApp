<h1 class="text-center mb-3 mt-3">Login</h1>

<%=form_with url:login_path,method: :post do |form|%>


<div class="m-auto" style="width:30%">

  <% if flash[:error].present? %>
    <div class="alert alert-danger">
      <strong>Error!</strong> <%= flash[:error] %>
    </div>
    <%end%>
    
	<div class="d-flex flex-column form-control mb-3">
	<%=form.label :Email%>
	<%=form.text_field :email%>
</div>
<div class="d-flex flex-column form-control mb-3">
	<%=form.label :Password%>
	<%=form.password_field :password%>
</div>


<div class="text-center m-auto d-block mb-3">
      <%= form.submit "Login", class: "btn btn-primary" %>
    </div>

    <p>Don't have an account?</p>
    <div class="alert alert-info ", style="text-align: center;">
      <%= link_to "Sign Up", sign_up_path%>
    </div>
</div>



<%end%>




